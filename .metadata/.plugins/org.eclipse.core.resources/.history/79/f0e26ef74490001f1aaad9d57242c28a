<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="WARN">

    <!-- Appenders 설정 -->
    <Appenders>

        <!-- {github 계정}.log 파일 Appender -->
        <RollingFile name="TraceFileAppender"
                     fileName="/tmp/cswp/logs/학번/{github 계정}.log"
                     filePattern="/tmp/cswp/logs/학번/{github 계정}-%d{yyyy-MM-dd-HH-mm}.log.gz">
            <PatternLayout>
                <Pattern>%d %p %c{1.} [%t] %m%n</Pattern>
            </PatternLayout>
            <Policies>
                <TimeBasedTriggeringPolicy />
                <SizeBasedTriggeringPolicy size="10MB" />
            </Policies>
            <DefaultRolloverStrategy max="5" />
        </RollingFile>

        <!-- {github 계정}_info.log 파일 Appender -->
        <RollingFile name="InfoFileAppender"
                     fileName="/tmp/cswp/logs/학번/{github 계정}_info.log"
                     filePattern="/tmp/cswp/logs/학번/{github 계정}_info-%d{yyyy-MM-dd}.log.gz">
            <PatternLayout>
                <Pattern>%d %p %c{1.} [%t] %m%n</Pattern>
            </PatternLayout>
            <Policies>
                <TimeBasedTriggeringPolicy interval="1" modulate="true" />
            </Policies>
            <DefaultRolloverStrategy max="5" />
        </RollingFile>

    </Appenders>

    <!-- Loggers 설정 -->
    <Loggers>
        <!-- kr.ac.kku.cs.wp.{github 계정} 패키지에 대해 trace level 설정 -->
        <Logger name="kr.ac.kku.cs.wp.{github 계정}" level="trace" additivity="false">
            <AppenderRef ref="TraceFileAppender" />
        </Logger>

        <!-- kr.ac.kku.cs.wp.{github 계정} 패키지에 대해 info level 설정 -->
        <Logger name="kr.ac.kku.cs.wp.{github 계정}" level="info" additivity="false">
            <AppenderRef ref="InfoFileAppender" />
        </Logger>

        <!-- 나머지 패키지는 fatal level 이상 설정 -->
        <Root level="fatal">
            <AppenderRef ref="TraceFileAppender" />
        </Root>
    </Loggers>

</Configuration>
